{
  "name": "framework-helper",
  "displayName": "vscode-extension",
  "publisher": "swordjs",
  "description": "Sword.js framework helper",
  "version": "1.0.4",
  "icon": "media/sword-logo.png",
  "engines": {
    "vscode": "^1.69.0"
  },
  "repository": {
    "url": "https://github.com/swordjs/sword-framework"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onView:Route"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
				"language": "javascript",
				"path": "./snippets.json"
			},
      {
				"language": "typescript",
				"path": "./snippets.json"
			}
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "swordjs-framework-helper",
          "title": "swordjs-framework-helper",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "swordjs-framework-helper": [
        {
          "id": "Route",
          "name": "Route",
          "icon": "media/logo.svg",
          "contextualTitle": "Package Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "Route.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "media/refresh_light.svg",
          "dark": "media/refresh_dark.svg"
        }
      },
      {
        "command": "Route.addEntry",
        "title": "AddApi",
        "icon": {
          "light": "media/add_light.svg",
          "dark": "media/add_dark.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "Route.refreshEntry",
          "when": "view == Route",
          "group": "navigation"
        },
        {
          "command": "Route.addEntry",
          "when": "view == Route",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "dev": "nodemon --watch src/ -C -e ts --debug -x 'npm run build'",
    "build": "tsc",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/vscode": "^1.69.0",
    "@vscode/test-electron": "^2.1.5"
  }
}
